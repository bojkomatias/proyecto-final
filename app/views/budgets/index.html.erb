        <table class="min-w-full divide-y divide-gray-200 border-b border-gray-200">
          <thead class="bg-gray-50">
            <tr>
             <th class="px-6 py-3 text-left  font-medium text-gray-500 uppercase tracking-wider" ><%= link_to '<div>Name &#x2195; </div>'.html_safe, budgets_path(:sort => true, :by => "name", :order => (params[:order] == "asc" ? "desc" : "asc")) %></th>
